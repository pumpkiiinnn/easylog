{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "fs:default",
    "dialog:default",
    "fs:allow-open",
    "fs:read-files",
    "fs:read-all",
    "fs:allow-read",
    "dialog:allow-open",
    "dialog:allow-save",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://*.ai-ia.cc" }]
    }
  ]
}